# Configurações da Aplicação
# ===================================
APP_ENV=production
APP_DEBUG=false
APP_BASE_URL=https://admcloud.papion.com.br

# ===================================
# Banco de Dados
# ===================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=papion
DB_USER=papion
